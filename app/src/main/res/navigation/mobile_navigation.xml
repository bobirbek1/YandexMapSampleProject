<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_bookmark">

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.idrok.yandexmap.ui.bookmark.BookmarkFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_bookmark" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.idrok.yandexmap.ui.map.MapFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.idrok.yandexmap.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
    <dialog
        android:id="@+id/searchFragment"
        android:name="com.idrok.yandexmap.ui.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
    <dialog
        android:id="@+id/saveDialog"
        android:name="com.idrok.yandexmap.ui.saveDialog.SaveDialogFragment"
        android:label="SaveDialog"
        tools:layout="@layout/save_dialog_fragment"/>
</navigation>